{
  "name": "db_configure",
  "description": "Configures PostgreSQL and backup",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "backup_restore": {
      "sources": {
        "enabled": ["postgresql"]
      },
      "destinations": {
        "enabled": ["s3"]
      }
    }
  },
  "run_list": [
    "postgresql_part::configure",
    "backup_restore::configure"
  ]
}
