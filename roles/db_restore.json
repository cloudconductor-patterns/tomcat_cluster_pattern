{
  "name": "db_restore",
  "description": "Restores PostgreSQL database from latest backup",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "backup_restore": {
      "destinations": {
        "enabled": ["s3"]
      },
      "restore": {
        "target_sources": ["postgresql"]
      }
    }
  },
  "run_list": [
    "recipe[backup_restore::restore]"
  ]
}
