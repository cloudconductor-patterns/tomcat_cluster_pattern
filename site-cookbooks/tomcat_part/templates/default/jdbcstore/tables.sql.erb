<% case @database_type %>
<% when 'postgresql' %>
CREATE TABLE IF NOT EXISTS <%=@session_table['name'] %> (
  <%=@session_table['idCol'] %>     VARCHAR(100) NOT NULL PRIMARY KEY,
  <%=@session_table['appCol'] %>       VARCHAR(255),
  <%=@session_table['validCol'] %>  CHAR(1)      NOT NULL,
  <%=@session_table['maxInactiveCol'] %>   INT          NOT NULL,
  <%=@session_table['lastAccessedCol'] %>    BIGINT       NOT NULL,
  <%=@session_table['dataCol'] %>   BYTEA
);
<% when 'mysql' %>
CREATE TABLE IF NOT EXISTS <%=@session_table['name'] %> (
  <%=@session_table['idCol'] %>     VARCHAR(100) NOT NULL PRIMARY KEY,
  <%=@session_table['appCol'] %>       VARCHAR(255),
  <%=@session_table['validCol'] %>  CHAR(1)      NOT NULL,
  <%=@session_table['maxInactiveCol'] %>   INT          NOT NULL,
  <%=@session_table['lastAccessedCol'] %>    BIGINT       NOT NULL,
  <%=@session_table['dataCol'] %>   MEDIUMBLOB
);

<% when 'oracle' %>
CREATE TABLE  <%=@session_table['name'] %> (
  <%=@session_table['idCol'] %>     VARCHAR2(100) NOT NULL PRIMARY KEY,
  <%=@session_table['appCol'] %>       VARCHAR2(255),
  <%=@session_table['validCol'] %>  CHAR(1)      NOT NULL,
  <%=@session_table['maxInactiveCol'] %>   NUMBER(10, 0)       NOT NULL,
  <%=@session_table['lastAccessedCol'] %>    NUMBER(19, 0)       NOT NULL,
  <%=@session_table['dataCol'] %>   BLOB
);
<% end %>

